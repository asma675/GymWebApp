@model GymWebApp.Models.Member
@{
    ViewBag.Title = "Find a Member";
    bool notFound = ViewBag.NotFound == true;
}
<h2>Find a Member</h2>

<form method="get">
    <div class="form-row">
        <div class="form-group col-md-5">
            <label>Email</label>
            <input name="email" class="form-control" value="@Request["email"]" />
        </div>
        <div class="form-group col-md-1 text-center" style="padding-top:32px;">OR</div>
        <div class="form-group col-md-5">
            <label>Phone</label>
            <input name="phone" class="form-control" value="@Request["phone"]" />
        </div>
    </div>
    <button class="btn btn-primary">Search</button>
</form>

@if (notFound)
{
    <div class="alert alert-warning mt-3">No match found.</div>
}
else if (Model != null)
{
    <table class="table table-bordered mt-3">
        <tr><th>Name</th><td>@Model.Name</td></tr>
        <tr><th>Age</th><td>@Model.Age</td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
        <tr><th>Phone</th><td>@Model.Phone</td></tr>
        <tr><th>Plan</th><td>@Model.MembershipType</td></tr>
        <tr><th>Discount</th><td>@(Model.YearlyDiscountPercent?.ToString() ?? "-")</td></tr>
    </table>
}